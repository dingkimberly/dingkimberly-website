<!DOCTYPE html>
<html>

<head>

<title>Button</title>

<link rel="shortcut icon" type="image/png" sizes="32x32" href="/images/favicon.png">

<link rel="stylesheet" type="text/css" href="/stylesheets/stylesheet-button.css">

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact%20Gothic">

<%#-----------------------------------------------------------------%>

<style>

body {
	font-family: 'Didact Gothic';
	font-size: 20px;
}

</style>

<%#-----------------------------------------------------------------%>

</head>

<body onload="buttonload()">

<center>
<button class="button" id="button" onclick="increment()"></button>

<p>
The green button has been clicked <span id="count"></span> <span id="times"></span>.
</p>

<p>
<span id="line2">
To reset the counter, click the red button.
</span>
</p>

<button class="resetbutton" id="resetbutton" onclick="reset()"></button>

</center>

<%#-----------------------------------------------------------------%>

<script>

var value = 0;

function buttonload() {
	document.getElementById("count").innerHTML = value;
	if (value == 1) {
		document.getElementById("times").innerHTML = "time";
	}
	else {
		document.getElementById("times").innerHTML = "times";
	}
}

function increment() {
	value++;
	document.getElementById("count").innerHTML = value;
	if (value == 1) {
		document.getElementById("times").innerHTML = "time";
	}
	else {
		document.getElementById("times").innerHTML = "times";
	}

	if (value == 69) { 
		document.getElementById("line2").innerHTML = "Nice.";
	}
	else if (value == 420) { 
		document.getElementById("line2").innerHTML = "Nice!";
	}
	else { 
		document.getElementById("line2").innerHTML = "To reset the counter, click the red button.";
	}
}

function reset() {
	value = 0;
	document.getElementById("count").innerHTML = value;
	document.getElementById("times").innerHTML = "times";
	document.getElementById("line2").innerHTML = "To reset the counter, click the red button.";
}

</script>

<%#-----------------------------------------------------------------%>

</body>

</html>